{
    "version": 6,
    "vendor": {
        "conan": {}
    },
    "include": [
        "build/build/Debug/generators/CMakePresets.json"
    ],
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default configure (build in ./build)",
            "description": "Configure with binaries in ./build and default options (client+server)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Release"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        }
    ],
    "workflowPresets": [
        {
            "name": "all",
            "displayName": "Configure + Build (client & server)",
            "steps": [
                {
                    "type": "configure",
                    "name": "default"
                },
                {
                    "type": "build",
                    "name": "default"
                }
            ]
        }
    ]
}